@model List<Category>

<!-- Portfolio Section -->
<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Portfolio</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">All</li>
                @foreach (var cat in Model)
                {
                <li data-filter=".@cat.Slug">@cat.Name</li>
                }
               
            </ul><!-- End Portfolio Filters -->
           
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

            @foreach (var Product in ViewBag.Products) 
            {
            <div class="col-lg-4 col-md-6 portfolio-item isotope-item @Product.Cat.Slug">
                <div class="portfolio-content h-100">
                    <a href="@Product.Photo" data-gallery="portfolio-gallery-app" class="glightbox"><img src="@Product.Photo" class="img-fluid" alt=""></a>
                    <div class="portfolio-info">
                        <h4><a href="portfolio-details.html" title="More Details">@Product.Name</a></h4>
                        <p>Lorem ipsum, dolor sit amet consectetur</p>
                    </div>
                </div>
            </div><!-- End Portfolio Item -->
                
            }
  

        </div>

    </div>

</section>
<!-- /Portfolio Section -->
